<News>:
	number: number
	
	Label:
		text: "How many headlines do you want?"
		size_hint: 0.6, 0.2
		pos_hint: {"x":0.2, "top":1}


	TextInput:
		id: number
		text: ""
		size_hint: 0.6, 0.2
		pos_hint: {"x":0.2, "y":0.5}


	Button:
		text: "Get News"
		size_hint: 0.8, 0.2
		pos_hint: {"x":0.1, "y":0.1}
		on_release: root.get_news()	

