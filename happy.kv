	Button:
		text: "cosh (x)"
		size_hint: 0.3, 0.1
		pos_hint: {"x":0.35, "y": 0.5}
		on_release: root.takecosh()

	Button:
		text: "radians (x)"
		size_hint: 0.3, 0.1
		pos_hint: {"x":0.7, "y": 0.5}
		on_release: root.takeradian()

	Button:
		text: "degrees (x)"
		size_hint: 0.3, 0.1
		pos_hint: {"x":0.002, "y": 0.4}
		on_release: root.takedegrees()

	Button:
		text: "acos (x)"
		size_hint: 0.3, 0.1
		pos_hint: {"x":0.35, "y": 0.4}
		on_release: root.takeacos()

	Button:
		text: "acosh (x)"
		size_hint: 0.3, 0.1
		pos_hint: {"x":0.7, "y": 0.4}
		on_release: root.takeacosh()

	Button:
		text: "asin (x)"
		size_hint: 0.3, 0.1
		pos_hint: {"x":0.002, "y": 0.3}

	Button:
		text: "asinh (x)"
		size_hint: 0.3, 0.1
		pos_hint: {"x":0.35, "y": 0.3}

	Button:
		text: "atan (x)"
		size_hint: 0.3, 0.1
		pos_hint: {"x":0.7, "y": 0.3}

	Button:
		text: "atanh (x)"
