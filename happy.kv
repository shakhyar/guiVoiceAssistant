<ChatPage>:
	main_input: main_input
	Image:
    	source: "giphy.gif"
    	size: self.texture_size





	Button:
		size_hint: 0.2, 0.1
		pos_hint:{"x": 0.8, "y": 0.0}
		background_color: (0,0.3,0.5,1)
		text: "Send>"
		on_release: root.btn()
	
	TextInput:
		id: main_input
		size_hint: 0.8, 0.1
		pos_hint:{"x": 0, "y": 0.0}
		background_color: (0.7,0.4,0.732,1)
		text: ""
		multiline:False
		

