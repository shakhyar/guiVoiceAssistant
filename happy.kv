<Math_main>:
	Label:
		text: "What math do you want to perform?"
		size_hint: 0.6, 0.2
		pos_hint: {"x":0.2, "top":1}

	Button:
		text: "Square root(x)"
		size_hint: 0.3, 0.1
		pos_hint: {"x":0.002, "y": 0.7}
		on_release: root.takesqrt()

	Button:
		text: "Power(x, y)"
		size_hint: 0.3, 0.1
		pos_hint: {"x":0.35, "y": 0.7}
